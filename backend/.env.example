# データベース設定
DATABASE_URL="postgresql://countdown_user:countdown_pass@db:5432/countdown_hub"

# アプリケーション設定
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
DEVELOPMENT_MODE=true

# Google OAuth設定 (実際の値に置き換えてください)
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# 管理者設定 (オプション)
ADMIN_EMAIL_1=admin@example.com
ADMIN_EMAIL_2=admin2@example.com
ADMIN_EMAIL_3=admin3@example.com

# フロントエンドURL
FRONTEND_URL=http://localhost:3000

# 本番環境用の設定例 (本番デプロイ時に使用)
# GOOGLE_CALLBACK_URL=https://your-domain.com/api/auth/google/callback
# FRONTEND_URL=https://your-domain.com